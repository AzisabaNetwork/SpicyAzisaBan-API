{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "skipLibCheck": true, /* https://github.com/DefinitelyTyped/DefinitelyTyped/issues/36389 */
    "outDir": "dist/"
  },
  "exclude": [
    "node_modules/"
  ]
}
